<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>Assignment2</display-name>
  <welcome-file-list>
    <welcome-file>control</welcome-file>
    
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <description></description>
    <display-name>ControlServlet</display-name>
    <servlet-name>ControlServlet</servlet-name>
    <servlet-class>ass2.ControlServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ControlServlet</servlet-name>
    <url-pattern>/ControlServlet</url-pattern>
  </servlet-mapping>
  
  
  
  <context-param> 
    <description>Location to store uploaded poster</description> 
    <param-name>poster-upload</param-name> 
    <param-value>
         \comp9321_movie\poster\
     </param-value> 
   </context-param>
   
<servlet>
		<description>
		</description>
		<display-name>MailSenderServlet</display-name>
		<servlet-name>MailSenderServlet</servlet-name>
		<servlet-class>
		ass2.MailSenderServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MailSenderServlet</servlet-name>
		<url-pattern>/MailSender</url-pattern>
	</servlet-mapping>
	<resource-ref>
		<description>
   			 Resource reference to a factory for javax.mail.Session
   			 instances that may be used for sending electronic mail
    			 messages, preconfigured to connect to the appropriate
    			 SMTP server.
  		</description>
		<res-ref-name>mail/Session</res-ref-name>
		<res-type>javax.mail.Session</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

</web-app>

