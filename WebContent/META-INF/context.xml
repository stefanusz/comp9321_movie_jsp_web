<?xml version="1.0" encoding="UTF-8"?>
<Context debug="1" reloadable="true" crossContext="true">
  <Resource name="jdbc/cs9321" auth="Container"
          type="javax.sql.DataSource" username="user" password="user"
          driverClassName="org.apache.derby.jdbc.ClientDriver" 
          url="jdbc:derby://localhost:1527/movie"
          maxActive="8" maxIdle="4"></Resource>
          
    <!--
  	Defining a mail session in the context
  	Configure the parameters with underscores
   -->
  <Resource name="mail/Session" auth="Container"
          type="javax.mail.Session"
  		  mail.smtp.host="smtp.your_mail_provider"
  		  mail.smtp.port="provider_port"
  		  mail.smtp.auth="true"
  		  mail.smtp.user="your_login"
  		  password="your_password"
  		  mail.debug="false"
  		  mail.smtp.starttls.enable="true"/>   
</Context>
